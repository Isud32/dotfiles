# yd-dlp
alias yt-mp3='yt-dlp -f bestaudio --extract-audio --audio-format mp3 '
alias yt-mp4='yt-dlp -f "bestvideo[ext=mp4]+bestaudio[ext=m4a]/mp4" -o "%(title)s.%(ext)s" '

alias yt-mp3-2='yt-dlp -x --audio-format mp3 --audio-quality 0 --embed-thumbnail --output "%(title)s.%(ext)s"'
alias dw='yt-dlp -x --audio-format mp3 --audio-quality 0 --output "%(title)s.%(ext)s" --extractor-args "youtube:player_client=android" '
