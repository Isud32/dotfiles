alias lsa='ls -a'
alias lsn='ls -snew'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias pids='ps -e -o pid,comm'
alias feh='feh --info "echo %n \(%u / %l\) %wx%h" --keep-zoom-vp --image-bg black --no-fehbg'
alias nopwd='export HOME=$PWD' # when im in a deep subdir and the promp gets anoying 
alias yespwd='export HOME=/home/tobias' # so nvim configs break when using nopwd inside tmux (learn how 2 fix later)
alias untar='tar -xvf'
alias path='echo $PATH | tr ":" "\n"'
alias cdl='cd ~/Downloads/'
alias cdk='cd ~/Programacion/'
alias cdv='cd ~/.config/nvim'
alias cdj='cd /'
alias aliasrc='nvim ~/.config/zsh/aliasrc'
alias top20-commands="fc -l 1 | awk '{print \$2}' | sort | uniq -c | sort -nr | head -20"
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'
# Git
alias git-log='git log --oneline --all --graph --pretty=format:"%C(auto)%h%d %s - %C(cyan)%C(italic)%cr"'
